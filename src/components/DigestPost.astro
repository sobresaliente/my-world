---

    interface Props {
        title: string;
        link: string;
        date: string;
    }

    const { title, link, date } = Astro.props;
---

<div
    class="w-1/2 mx-auto bg-orange-100 dark:bg-zinc-600 text-zinc-900 transition-colors duration-500     dark:text-slate-50  mb-8 h-24 p-4 rounded-md">
    <a href={'posts/' + link} class="text-center text-xl">
        <h2>{title}</h2>
    </a>
    <span class="text-center text-sm text-zinc-400 block mt-4">{date}</span>
</div>