---
export interface Props {
    title: string;
    image: string;
    description: string;
    link: string;
}

const { title, image, description, link } = Astro.props;

---


<div class="p-8 bg-zinc-700">
    <h2>{title}</h2>
    <a href={link}><img src={image} alt="" /></a>
    <p>{description}</p>
</div>