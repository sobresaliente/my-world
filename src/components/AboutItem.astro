---
    export interface Props {
        name: string;
        picture: string;
        link: string;
        description: string;
    }

    const { name, picture, link, description } = Astro.props
---

<section class="mb-16 text-center flex flex-col justify-between">
    <h1 class="text-2xl m-8 h-16">{name}</h1>
    <a href={link} class="block mx-auto w-10/12 h-64 mb-6">
        <img src={picture} class="w-64 h-64 object-cover block mx-auto mb-4 border-orange-500 border-2" />
    </a>
    <p class="h-16 w-10/12 mx-auto">{description}</p>
</section>